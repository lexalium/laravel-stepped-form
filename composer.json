{
    "name": "lexal/laravel-stepped-form",
    "description": "Stepped Form for Laravel & Lumen.",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Lex",
            "email": "allapkov@gmail.com"
        }
    ],
    "keywords": [
        "laravel",
        "lumen",
        "stepped-form"
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^8.0 || ^9.0 || ^10.0",
        "illuminate/routing": "^8.0 || ^9.0 || ^10.0",
        "illuminate/support": "^8.0 || ^9.0 || ^10.0",
        "lexal/http-stepped-form": "^1.0"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "illuminate/http": "^8.0 || ^9.0 || ^10.0",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "webimpress/coding-standard": "^1.2"
    },
    "suggest": {
        "illuminate/events": "Required to use Laravel Dispatcher as form Event Dispatcher (^8.0 || ^9.0 || ^10.0).",
        "illuminate/view": "Required to render Laravel views (^8.0 || ^9.0 || ^10.0).",
        "illuminate/session": "Required to use Laravel Session as Stepped Form storage (^8.0 || ^9.0 || ^10.0).",
        "illuminate/config": "Required to use Laravel config (^8.0 || ^9.0 || ^10.0)."
    },
    "autoload": {
        "psr-4": {
            "Lexal\\LaravelSteppedForm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lexal\\LaravelSteppedForm\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lexal\\LaravelSteppedForm\\ServiceProvider\\ServiceProvider"
            ]
        }
    }
}
