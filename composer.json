{
    "name": "lexal/laravel-stepped-form",
    "description": "Stepped Form for Laravel & Lumen.",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Lex",
            "email": "allapkov@gmail.com"
        }
    ],
    "keywords": [
        "laravel",
        "lumen",
        "stepped-form",
        "dynamic stepped-form",
        "multi-step form",
        "multi-step"
    ],
    "require": {
        "php": ">=8.1",
        "illuminate/contracts": "^9.0 || ^10.0",
        "illuminate/routing": "^9.0 || ^10.0",
        "illuminate/support": "^9.0 || ^10.0",
        "lexal/http-stepped-form": "^2.0"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
        "illuminate/http": "^9.0 || ^10.0",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "roave/security-advisories": "dev-latest",
        "webimpress/coding-standard": "^1.3"
    },
    "suggest": {
        "illuminate/events": "Required to use Laravel Dispatcher as form Event Dispatcher (^9.0 || ^10.0).",
        "illuminate/view": "Required to render Laravel views (^9.0 || ^10.0).",
        "illuminate/session": "Required to use Laravel Session as Stepped Form storage (^9.0 || ^10.0).",
        "illuminate/config": "Required to use Laravel config (^9.0 || ^10.0)."
    },
    "autoload": {
        "psr-4": {
            "Lexal\\LaravelSteppedForm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lexal\\LaravelSteppedForm\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lexal\\LaravelSteppedForm\\ServiceProvider\\ServiceProvider"
            ]
        }
    }
}
